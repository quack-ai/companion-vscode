{
  "name": "quack-companion",
  "displayName": "Quack Companion",
  "version": "0.0.5",
  "license": "Apache-2.0",
  "publisher": "quackai",
  "description": "Your companion for code contributions",
  "pricing": "Free",
  "author": {
    "name": "F-G Fernandez",
    "url": "https://github.com/frgfm"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Education"
  ],
  "keywords": [
    "ai",
    "assistant",
    "contribution",
    "quackai",
    "deep learning",
    "llm",
    "copilot",
    "chatgpt",
    "openai"
  ],
  "icon": "media/quack-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/quack-ai/companion"
  },
  "bugs": {
    "url": "https://github.com/quack-ai/companion/issues",
    "email": "support@quack-ai.com"
  },
  "homepage": "https://quack-ai.com",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.74.0"
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": [
      {
        "title": "Quack companion",
        "properties": {
          "api.endpoint": {
            "type": "string",
            "default": "https://api.quackai.com",
            "description": "Quack API endpoint"
          },
          "analytics.host": {
            "type": "string",
            "default": "https://eu.posthog.com",
            "description": "The PostHog endpoint"
          },
          "analytics.key": {
            "type": "string",
            "default": "phc_mU5797H4W1GELY5wmpxxSK9EWZyW4Eev5WZOtuqXMPE",
            "description": "The project key for PostHog"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "quack-companion",
          "title": "Quack Companion",
          "icon": "media/dark/quack.svg"
        }
      ]
    },
    "views": {
      "quack-companion": [
        {
          "type": "tree",
          "id": "quack-companion.authView",
          "name": "Authentication",
          "icon": "media/dark/quack.svg",
          "contextualTitle": "Authentication",
          "when": "!quack-companion.hasQuackToken"
        },
        {
          "type": "tree",
          "id": "quack-companion.guidelineTreeView",
          "name": "Guidelines",
          "icon": "media/dark/quack.svg",
          "contextualTitle": "Guidelines",
          "when": "quack-companion.hasQuackToken"
        }
      ]
    },
    "commands": [
      {
        "command": "quack-companion.debugInfo",
        "category": "Quack Companion",
        "title": "Get debug information"
      },
      {
        "command": "quack-companion.setEndpoint",
        "category": "Quack Companion",
        "title": "Set the API endpoint"
      },
      {
        "command": "quack-companion.logIn",
        "category": "Quack Companion",
        "title": "Log in with GitHub"
      },
      {
        "command": "quack-companion.logOut",
        "category": "Quack Companion",
        "title": "Log out"
      },
      {
        "command": "quack-companion.fetchGuidelines",
        "category": "Quack Companion",
        "title": "Fetch contribution guidelines",
        "icon": {
          "light": "media/light/refresh.svg",
          "dark": "media/dark/refresh.svg"
        }
      },
      {
        "command": "quack-companion.analyzeCode",
        "category": "Quack Companion",
        "title": "Analyze code with Quack AI",
        "icon": {
          "light": "media/light/debug-rerun.svg",
          "dark": "media/dark/debug-rerun.svg"
        }
      },
      {
        "command": "quack-companion.analyzeCodeMonoGuideline",
        "category": "Quack Companion",
        "title": "Analyze code snippet in respect to a specific guideline",
        "icon": {
          "light": "media/light/debug-rerun.svg",
          "dark": "media/dark/debug-rerun.svg"
        }
      }
    ],
    "viewsWelcome": [
      {
        "view": "quack-companion.authView",
        "contents": "Welcome to Quack extension! Let's get you started\n[Authenticate](command:quack-companion.logIn)",
        "when": "!quack-companion.hasQuackToken"
      }
    ],
    "keybindings": [
      {
        "command": "quack-companion.fetchGuidelines",
        "mac": "cmd+shift+g",
        "key": "ctrl+shift+g"
      },
      {
        "command": "quack-companion.analyzeCode",
        "mac": "cmd+shift+q",
        "key": "ctrl+shift+q"
      },
      {
        "command": "quack-companion.debugInfo",
        "mac": "cmd+shift+d",
        "key": "ctrl+shift+d"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "quack-companion.analyzeCode",
          "when": "editorHasSelection && resourceLangId == 'python'"
        }
      ],
      "view/title": [
        {
          "command": "quack-companion.fetchGuidelines",
          "when": "view == quack-companion.guidelineTreeView",
          "group": "navigation"
        },
        {
          "command": "quack-companion.analyzeCode",
          "when": "view == quack-companion.guidelineTreeView",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "quack-companion.analyzeCodeMonoGuideline",
          "when": "view == quack-companion.guidelineTreeView && viewItem == guidelineTreeItem",
          "group": "inline"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "quack-companion.maintainer-tutorial",
        "title": "Getting started as a Maintainer",
        "description": "Quick setup to provide contribution assistance to your repository contributors.",
        "steps": [
          {
            "id": "sign-up",
            "title": "Sign-up using GitHub",
            "description": "Go to Quack platform, click on **Login with GitHub** and follow the instructions.\n[Visit Quack platform](https://app.quackai.com/)",
            "media": {
              "image": "media/github_auth.png",
              "altText": "GitHub authentication"
            },
            "completionEvents": [
              "onLink:https://app.quackai.com/"
            ]
          },
          {
            "id": "guideline-parsing",
            "title": "Parse contribution guidelines from your repo",
            "description": "Now select your repo, click on **Connect repo**, then on **Parse guidelines**.",
            "media": {
              "image": "media/guideline_dashboard.png",
              "altText": "Guideline management dashboard"
            },
            "completionEvents": []
          },
          {
            "id": "guideline-editing",
            "title": "Edit your guidelines",
            "description": "Create guidelines or edit them by clicking on them.",
            "media": {
              "image": "media/editor_view.png",
              "altText": "Guideline edition view"
            },
            "completionEvents": []
          },
          {
            "id": "extension-installation",
            "title": "Install the VSCode extension",
            "description": "Go to VSCode marketplace and install Quack Companion.",
            "media": {
              "image": "media/marketplace_page.png",
              "altText": "Quack logo"
            },
            "completionEvents": [
              "onExtensionInstalled:quack-companion"
            ]
          },
          {
            "id": "vscode-fetch",
            "title": "Check the access for your contributors in VSCode",
            "description": "Click on the Quack view, and authenticate. Your guidelines should be fetched automatically.\n[Authenticate](command:quack-companion.logIn)",
            "media": {
              "image": "media/guideline_list.png",
              "altText": "Quack logo"
            },
            "completionEvents": [
              "onCommand:quack-companion.logIn",
              "onCommand:quack-companion.fetchGuidelines"
            ]
          }
        ]
      },
      {
        "id": "quack-companion.contributor-tutorial",
        "title": "Getting started as a Developer",
        "description": "Quick setup to get contribution assistance",
        "steps": [
          {
            "id": "vscode-endpoint",
            "title": "Specify your custom Quack API endpoint",
            "description": "If you're running on a custom API endpoint, specify it first.\n[Set custom endpoint](command:quack-companion.setEndpoint)",
            "media": {
              "image": "media/quack-logo.png",
              "altText": "Quack logo"
            },
            "completionEvents": [
              "onCommand:quack-companion.setEndpoint"
            ]
          },
          {
            "id": "vscode-authenticate",
            "title": "Authenticate using GitHub",
            "description": "Click on **Authenticate** and follow the instructions.\n[Authenticate](command:quack-companion.logIn)",
            "media": {
              "image": "media/github_auth.png",
              "altText": "GitHub authentication"
            },
            "completionEvents": [
              "onCommand:quack-companion.logIn"
            ]
          },
          {
            "id": "vscode-request",
            "title": "Request guidelines for a repo",
            "description": "If the selected repo doesn't have any guidelines yet, you will be ask whether you'd like to request some.",
            "media": {
              "image": "media/quack-logo.png",
              "altText": "Quack logo"
            },
            "completionEvents": []
          },
          {
            "id": "vscode-analyze",
            "title": "Analyze code with Quack",
            "description": "Select a code section and click on **Analyze code with Quack** (arrow symbol in your Quack tab)",
            "media": {
              "image": "media/compliance_hint.png",
              "altText": "Code compliance hint"
            },
            "completionEvents": [
              "onCommand:quack-companion.analyzeCode",
              "onCommand:quack-companion.analyzeCodeMonoGuideline"
            ]
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint:check": "eslint src --ext ts",
    "lint:fix": "eslint --fix src --ext ts",
    "format:check": "npx prettier . --check",
    "format:fix": "npx prettier . --write"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "clipboardy": "^3.0.0",
    "node-machine-id": "^1.1.12",
    "posthog-node": "3.1.3",
    "typescript": "^5.1.6",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "20.2.5",
    "@types/uuid": "^9.0.2",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "prettier": "^3.0.1",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  }
}
